<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.volunteer.task.PublishTaskActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有困难就上掌心愿"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22sp"
        android:background="@drawable/left_bg"
        android:layout_marginBottom="20dp"
        />
    <android.support.v7.widget.CardView

        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="430dp"


        android:layout_margin="5dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="#382ca354"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="请填写基本信息"
                android:gravity="center"

                android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="添加一个标题:"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="联系方式:"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="horizontal"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/money"
                    android:hint="爱心币悬赏:"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/exe_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="时间:yyyy-MM-dd HH:mm"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="地点:"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/need_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="需要人数:"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"

                android:orientation="horizontal"
                >
                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="已报名人数:"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="200dp"


        android:layout_margin="5dp"
        app:cardCornerRadius="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/left_bg"
        android:layout_height="180dp">
        <EditText
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="top"
            android:hint="添加任务描述"
            android:maxLength="1000"
            android:minLines="6"
            android:padding="10dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_font_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_content"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:text="0/1000"
            android:textSize="14sp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/publish_task"
            android:gravity="center"
            android:text="任务发布"
            android:layout_gravity="center"
            android:background="@drawable/bmob_update_button_cancel_bg_normal"
            android:layout_width="200dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>

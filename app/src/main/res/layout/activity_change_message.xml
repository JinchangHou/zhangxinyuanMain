<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary" >

        <ImageView
            android:id="@+id/imageview_person_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:contentDescription="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更改用户信息"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <!--当前姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/actionsheet_bottom_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_old_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:text="修改之前的信息"/>
        <EditText
            android:id="@+id/ed_old_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:background="@null"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:text="侯金昌"/>

    </LinearLayout>

    <!--修改后的姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/actionsheet_bottom_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_new_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:text="修改之后的信息"/>
        <EditText
            android:id="@+id/ed_new_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:background="@null"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:hint="新名字" />

    </LinearLayout>

    <!--输入验证码-->
    <LinearLayout
        android:id="@+id/ll_verify"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/actionsheet_bottom_normal"
        android:gravity="center_vertical"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:text="验证码"/>
        <EditText
            android:id="@+id/ed_verify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:singleLine="true"
            android:background="@null"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:hint="请输入验证码" />
        <Button
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_submit"
            android:textSize="12sp"
            android:textColor="#6FA13C"
            android:text="获取验证码"/>
    </LinearLayout>

    <!--提交按钮-->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="提交"
        android:textColor="#6FA13C"
        android:background="@drawable/btn_submit"/>


</LinearLayout>
